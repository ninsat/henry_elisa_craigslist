<h1>Edit Listing:</h1>
<% if @errors %>
	<ul>
	<% @errors.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
<% end %>

<%= form_for @article do |f| %>
	<%= f.text_field :title, placeholder: 'item name' %><br>
	<%= f.text_area :description, placeholder: 'item description' %><br>
	$<%= f.text_field :price, placeholder: 'price' %><br>
	<%= f.text_field :condition, placeholder: 'condition' %><br>
	<%= f.text_field :location, placeholder: 'location' %><br>
	<%= f.collection_select :category_id, Category.all, :id, :name%><br>
	<%= f.submit "Submit" %>
<% end %>